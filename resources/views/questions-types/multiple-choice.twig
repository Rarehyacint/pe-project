{% from 'components/core/show-header' import show_header %}
{% import 'components/core/forms' as forms %}

{% set letters = ['A', 'B', 'C', 'D'] %}
{% set values = {} %}
{% set solution = null %}

{% include 'components/core/create-question-name-form' %}

{% if isEdit %}
    {% for choice in question_type_data.choices %}
        {% set values = values | merge([choice.item]) %}
        {% if choice.is_solution %}
            {% set solution = choice.choice_key|trim %}
        {% endif %}
    {% endfor %}
{% endif %}
<div id="question-type-content" class="flex flex-col p-4 flex-1 htmx-animate">
    {{ show_header('Multiple Choice') }}
    <div class="flex gap-x-32 justify-between w-full">
        <div class="flex flex-col gap-y-4 w-full">
            {% for i in range(0, 3) %}
                {{ forms.form_field(
                    label:forms.label(
                        id: 'items[]', 
                        content: letters[i],
                        attributes:{
                            'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                        ),
                    input:forms.text(
                        name: 'items[]',
                        value: isEdit ? values[i] :  old('items')[i],
                        attributes:{
                            'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                            'required':true}),
                    errors: errors.get('items.' ~ i)
                )}}
            {% endfor %}
        </div>
        <div class="flex flex-1/2 flex-col gap-y-4 w-full">
            {{ forms.form_field(
                label:forms.label(
                    id:'solution', 
                    content:'Solution', 
                    attributes:{
                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900',}
                    ),
                input:forms.select(
                    name:'solution', 
                    value: isEdit ? solution : old('solution'),
                    values:{'':'Select a Solution', 'a':'A', 'b':'B', 'c':'C', 'd':'D'}, 
                    attributes:{
                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                        'required':true}),
                errors: errors.get('solution'),
                isColumn:true
            )}}
            <div class="flex md:h-1/5">
                {{ forms.form_field(
                label:forms.label(
                    id:'points', 
                    content:'Points', 
                    attributes:{
                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                    ),
                input:forms.number(
                    name:'points', 
                    value: isEdit ? question_type_data.points : old('points'),
                    attributes:{
                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                        'required':true,
                        'min':0,
                        'max':10,
                        'placeholder':'1 - 10 points'}),
                errors: errors.get('points'),
                isColumn:true
                )}}
            </div>
        </div>
    </div>
</div> 