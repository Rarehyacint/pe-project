{% from 'components/core/show-header' import show_header %}
{% import 'components/core/forms' as forms %}

{% include 'components/core/create-question-name-form' %}

<div class="htmx-animate flex flex-col p-4 flex-1">
    {{ show_header('Matching Items') }}
    <div class="flex gap-x-32 justify-between w-full">
        <div class="flex flex-col w-full">
            <div class="flex flex-col bg-gray-50 p-4 rounded-lg">
                {% for i in range(1, isEdit ? question_type_data|length : itemCount) %}
                    <div class="flex flex-1 gap-x-4">
                        {{ forms.form_field(
                            label:forms.label(
                                id: 'items[' ~ (i) ~ '][left]', 
                                content:'Matching Item ' ~ (i), 
                                attributes:{
                                    'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900 '}
                                ),
                            input:forms.text(
                                name:'items[' ~ (i) ~ '][left]',
                                value: isEdit ? question_type_data[i-1]['left'] :  old('items')[i]['left'],
                                attributes:{
                                    'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                                    'required':true
                                }),
                            errors:errors.get('items.' ~ (i) ~ '.left'),
                            isColumn: true
                        )}}
                        {{ forms.form_field(
                            label:forms.label(
                                id: 'items[' ~ (i) ~ '][right]', 
                                content:'Solution Item ' ~ (i), 
                                attributes:{
                                    'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                                ),
                            input:forms.text(
                                name:'items[' ~ (i) ~ '][right]',
                                value:  isEdit ? question_type_data[i-1]['right'] :old('items')[i]['right'],
                                attributes:{
                                    'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                                    'required':true
                                }),
                            errors:errors.get('items.' ~ (i) ~ '.right'),
                            isColumn: true
                        )}}
                        <button type="button" ondblclick="this.parentElement.remove()" class="flex text-xl font-bold text-red-700 hover:text-red-500 transition-colors cursor-pointer items-center mt-8">X</button>
                        <div class="flex md:w-1/5">
                            {{ forms.form_field(
                            label:forms.label(
                                id:'items[' ~ (i) ~ '][points]', 
                                content:'Points', 
                                attributes:{
                                    'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                                ),
                            input:forms.number(
                                name:'items[' ~ (i) ~ '][points]', 
                                value:  isEdit ? question_type_data[i-1]['item_points'] :old('items')[i]['points'],
                                attributes:{
                                    'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                                    'required':true,
                                    'min':0,
                                    'max':10
                                }),
                            errors:errors.get('items.' ~ (i) ~ '.points'),
                            isColumn:true
                        )}}
                        </div>
                    </div>   
                {% endfor %}
                <span id="swap" class="slide-it"></span>
            </div>
            <span class="text-xs font-semibold text-red-600 self-center py-1 italic">Item deletion is done by double-clicking.</span>
            
        </div>
        <div class="flex flex-1/5 flex-col gap-y-4 w-full">
            <input type="hidden" id="solution" name="solution" value="creating matching">
            <div class="flex gap-x-2">
                <img id="loader" class="htmx-indicator transition-opacity duration-500 pointer-events-none" width="20" src="{{ asset('images/bars-scale.svg') }}"/>
                
                <button 
                    type="button" 
                    class="cursor-pointer bg-white border-1 border-gray-600 text-gray-900 hover:bg-gray-600 hover:text-white duration-300 rounded-lg px-2 py-2 font-semibold text-sm"
                    hx-get="/questions/create/add-item?item_count={{ isEdit ? question_type_data|length : itemCount }}"
                    hx-target="#swap"
                    hx-swap="beforebegin transition:true"
                    hx-trigger="click throttle:1s"
                    hx-indicator="#loader"
                    >
                    Add more Items
                </button>
            </div>
        </div>
    </div>
</div>  


