{% from 'components/core/show-nav-item' import show_nav_item %}
{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from 'components/core/show-header' import show_header %}
{% from 'components/core/show-item' import show_item %}
{% import 'components/core/forms' as forms %}

{% extends 'components/core/faculty-layout' %}

{% block content %}

{{ breadcrumb('edit', subject.name) }}

<div class="flex flex-col mx-4 pl-4">
    <div class="flex justify-between">
        <h1 class="font-bold text-4xl">{{ subject.name }}</h1>
        <div class="flex flex-col gap-y-1">
            <button form="delete-form" type="submit" class="cursor-pointer bg-red-600 text-gray-200 hover:bg-red-500 hover:text-white duration-300 rounded-lg p-3 font-semibold text-sm">Delete Subject</button>
            {% if session('error') %} <p class="text-xs font-semibold text-red-500 italic">{{ session('error') }}</p> {% endif %}
        </div>
    </div>
    <div class="flex flex-col pt-1 gap-y-0.5">
        <span class="pl-2 text-xs text-gray-400 font-semi">ID : {{ subject.id }}</span>
    </div>
    
</div>

<div class="flex flex-1 flex-col gap-y-4 mx-64">
    <div class="flex max-w-full gap-x-4 overflow-x-auto mx-auto rounded-xl bg-white p-2 shadow-sm ring-1 ring-gray-950/5 ">
        {{ show_nav_item('/subjects/'~subject.id, 
                        '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
                            <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                            <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 0 1 0-1.113ZM17.25 12a5.25 5.25 0 1 1-10.5 0 5.25 5.25 0 0 1 10.5 0Z" clip-rule="evenodd" />
                        </svg>',
                        'View') }}
                        {% if can('update subjects') %}
        {{ show_nav_item('/subjects/'~subject.id~'/edit', 
                        '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
                            <path d="M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-12.15 12.15a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32L19.513 8.2Z" />
                        </svg>',
                        'Edit') }}
                        {% endif %}
    </div>

    <div class="flex flex-1 flex-col mx-16">
        <form action="{{ route('subjects.update', { subject:subject } ) }}" method="POST" class="flex flex-col gap-y-4">
            {{ csrf_field() }}
            {{ method_field('PATCH') }}
            <div class="flex max-w-full rounded-xl bg-white px-2 shadow-sm ring-1 ring-gray-950/5">
                <div class="flex flex-col p-4 flex-1">
                    {{ show_header('Details') }}
                    <div class="flex gap-x-32 justify-between w-full">
                        <div class="flex flex-col gap-y-4 w-full">
                            {{ forms.form_field(
                                label:forms.label(
                                    id:'name', 
                                    content:'Name', 
                                    attributes:{
                                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900  after:text-red-500 after:content-[\'\*\']'}
                                ),
                                input:forms.text(
                                    name:'name', 
                                    value:subject.name,
                                    attributes:{
                                        'class':'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                                        'required':true}
                                ),
                                isColumn:true,
                                errors: errors.get('name'),
                            )}}
                            
                            <div id="tags-container" class="flex flex-wrap gap-1 p-1 ">
                                <span class="whitespace-nowrap text-sm/6 font-medium text-gray-900 ">
                                    Course/s :
                                </span> 
                                {% for course in subject.courses %}
                                <span class=" inline-flex items-center px-2 py-0.5 min-w-fit  bg-blue-100 rounded-full text-blue-900 font-semibold text-xs select-none"> 
                                {{ course.abbreviation }}
                                </span>
                                {% endfor %}
                            </div>
                            <span class="text-gray-500 font-semibold text-xs italic">For Data Integrity Purposes, Course/s cannot be changed.</span>
                            {{ forms.form_field(
                                label:forms.label(
                                    id:'year_level', 
                                    content:'Year Level', 
                                    attributes:{
                                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                                    ),
                                input:forms.number(
                                    name:'year_level',
                                    value: subject.year_level,
                                    attributes:{
                                        'class':'flex-1 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                                        'required':true,
                                        'min':1,
                                        'max':4,
                                        'placeholder':'1 - 4 Year Level'
                                    }),
                                    errors: errors.get('year_level'),
                                    isColumn: true
                            )}}
                            {{ forms.form_field(
                                label:forms.label(
                                    id:'author', 
                                    content:'Author', 
                                    attributes:{
                                        'class':'whitespace-nowrap text-sm/6 font-medium text-gray-900'}
                                ),
                                input:forms.text(
                                    name:'author', 
                                    value:subject.createdBy.getFullName(),
                                    attributes:{
                                        'class':'block w-full cursor-not-allowed rounded-md bg-gray-100 px-3 py-1.5 outline-1 -outline-offset-1 outline-gray-300 text-gray-400  sm:text-sm/6',
                                        'disabled':true}
                                ),
                                isColumn:true 
                            )}}
                        </div>
                    </div>
                </div>  
            </div>
    
            <div class="flex gap-x-2">
                <button type="submit" class="cursor-pointer bg-blue-900 text-gray-200 hover:bg-blue-600 hover:text-white duration-300 rounded-lg px-2 py-1 font-semibold text-sm">
                    Update Subject
                </button>
                <a href="/subjects" class="cursor-pointer bg-white border-1 border-gray-600 text-gray-900 hover:bg-red-500 hover:border-white hover:text-white duration-300 rounded-lg p-2 font-semibold">Cancel</a>
            </div>
        </form>

        <form method="POST" action="{{ route('subjects.destroy', { subject:subject } ) }}" class="hidden" id="delete-form">
            {{ csrf_field() }}
            {{ method_field('DELETE') }}
        </form>
    </div>
</div>

{% endblock %}