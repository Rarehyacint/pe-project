{% extends 'components/core/base' %}

{% from 'components/core/show-nav-item' import show_nav_item %}
{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from 'components/core/show-header' import show_header %}
{% from 'components/core/show-item' import show_item %}

{% block layout %}
    <main class="flex-1 p-6">

        <h1 class="text-2xl font-bold mb-4">Notifications</h1>

        {% for notification in notifications %}
            <div class="mb-4 p-4 rounded-lg bg-white shadow-sm border border-gray-200">
                <h4 class="text-lg font-semibold text-gray-800">{{ notification.title }}</h4>
                <p class="text-gray-600">{{ notification.message }}</p>
                <small class="text-xs text-gray-400">{{ notification.created_at|date('F j, Y g:i A') }}</small>
            </div>
        {% else %}
            <p class="text-gray-500">No notifications available.</p>
        {% endfor %}
    </main>
{% endblock %}
