{% extends 'components/core/base.twig' %}

{% from 'components/core/show-nav-item' import show_nav_item %}
{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from '/components/core/sidebar-item' import sidebar_item %}

{% block layout %}
{{ breadcrumb() }}
    {% include 'components/core/sidebar.twig' %}
    {% include 'components/core/header.twig' %}


    <main class="flex-5 p-9">
        <h1 class="text-2xl font-bold mb-4">Notifications</h1>

        <div class="m-7 pt-7 flex gap-5 justify-center">
    <div class="flex items-center justify-start gap-x-2 mx-4">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-7">
            <path fill-rule="evenodd" d="M15.75 1.5a6.75 6.75 0 0 0-6.651 7.906c.067.39-.032.717-.221.906l-6.5 6.499a3 3 0 0 0-.878 2.121v2.818c0 .414.336.75.75.75H6a.75.75 0 0 0 .75-.75v-1.5h1.5A.75.75 0 0 0 9 19.5V18h1.5a.75.75 0 0 0 .53-.22l2.658-2.658c.19-.189.517-.288.906-.22A6.75 6.75 0 1 0 15.75 1.5Zm0 3a.75.75 0 0 0 0 1.5A2.25 2.25 0 0 1 18 8.25a.75.75 0 0 0 1.5 0 3.75 3.75 0 0 0-3.75-3.75Z" clip-rule="evenodd" />
        </svg>
        <h1 class="font-bold text-4xl">Notifications</h1>
    </div>
</div>

        {% if notifications is not empty %}
            <ul>
                {% for notif in notifications %}
                    <li class="mb-2 p-4 bg-white shadow rounded">
                        <strong>{{ notif.title }}</strong><br>
                        {{ notif.message }}
                        <br>
                        <small class="text-xs text-gray-400">{{ notif.created_at|date('F j, Y g:i A') }}</small>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p class="text-gray-500">No notifications available.</p>
        {% endif %}
    </main>
{% endblock %}
