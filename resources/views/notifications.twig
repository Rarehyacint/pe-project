{% extends 'components/core/base' %}


{% from 'components/core/breadcrumbs' import breadcrumb %}
{% from '/components/core/sidebar-item' import sidebar_item %}

{% block layout %}
    {% include 'components/core/sidebar.twig' %}

    <div class="absolute top-15 left-100 z-10">
    {{ breadcrumb()}}
    </div>


    <main class="flex-5 pt-28 pl-5">
        <div class="flex items-center justify-start gap-x-2 mx-100">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-10">
                <path fill-rule="evenodd" d="M15.75 1.5a6.75 6.75 0 0 0-6.651 7.906c.067.39-.032.717-.221.906l-6.5 6.499a3 3 0 0 0-.878 2.121v2.818c0 .414.336.75.75.75H6a.75.75 0 0 0 .75-.75v-1.5h1.5A.75.75 0 0 0 9 19.5V18h1.5a.75.75 0 0 0 .53-.22l2.658-2.658c.19-.189.517-.288.906-.22A6.75 6.75 0 1 0 15.75 1.5Zm0 3a.75.75 0 0 0 0 1.5A2.25 2.25 0 0 1 18 8.25a.75.75 0 0 0 1.5 0 3.75 3.75 0 0 0-3.75-3.75Z" clip-rule="evenodd" />
            </svg>
            <h1 class="font-bold text-4xl">Notifications</h1>
        </div>

        <div class="max-w-3xl mx-auto mt-10 space-y-4">
            {% for notif in notifications %}
                <div class="bg-white rounded-xl shadow-md p-6 hover:shadow-lg transition duration-300">
                    <div class="flex items-start justify-between">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-800 mb-1">
                                {{ notif.title }}
                            </h3>
                            <p class="text-gray-600 mb-3 leading-relaxed">
                                {{ notif.message }}
                            </p>
                        </div>
                    </div>
                    <div class="text-sm text-gray-400 text-right">
                        {{ notif.created_at|date('F j, Y g:i A') }}
                    </div>
                    {% if not notification.is_read %}
                    <form method="POST" action="/notifications/{{ notification.id }}/read" class="mt-2">
                        <input type="hidden" name="_token" value="{{ csrf_token() }}">
                        <button type="submit" class="text-xs text-blue-600 hover:underline">
                            Mark as read
                        </button>
                    </form>
                {% else %}
                    <p class="text-xs text-green-600 mt-2">Read</p>
                {% endif %}
                </div>
            {% else %}
                <div class="text-center text-gray-500 mt-10">
                    No notifications to show.
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}
